generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

// Tables
model User {
    id Int @id @default(autoincrement())

    // Properties
    name      String  @db.VarChar(255)
    email     String  @unique @db.VarChar(255)
    password  String  @db.VarChar(255)
    isPremium Boolean @default(false)

    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Relations
    taskList Task[] @relation("TaskToUser")
}

model Task {
    id Int @id @default(autoincrement())

    // Properties
    title  String  @db.VarChar(255)
    desc   String? @db.Text
    status Status  @default(todo)

    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Subtasks relation
    parentTaskId Int?
    parentTask   Task?  @relation("TaskToSubtasks", fields: [parentTaskId], references: [id])
    subtaskList  Task[] @relation("TaskToSubtasks")

    // Relations
    userId Int
    user   User @relation("TaskToUser", fields: [userId], references: [id])
}

enum Status {
    todo
    pending
    ongoing
    done
}
